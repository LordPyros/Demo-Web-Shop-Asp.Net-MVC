@model WebShopApp.Models.ProductIndexModel
@{
    ViewData["Title"] = "Chocolates";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/js/Chocolates.js" type="text/javascript"></script>
</head>
<body>

    <h2>Chocolates</h2>


    <div>
        <!--<form asp-controller="Products" asp-action="AddProductToCart" method="post">-->
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Chocolates" asp-route-id="@product.Id">
                                <img src="@product.ImageUrl" />
                            </a>
                        </td>
                        <td>@product.Name</td>
                        <td>$@product.Price</td>
                        <td><button class="btn btn-default addtocartbtn" type="submit" name="cookievalue" value="@product.Id">Add To Cart</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <!--</form>-->
    </div>
    
</body>

